<% include ../includes/head.ejs %>
    
<div class="main" id="main-content" role="main" style="padding-bottom: 40px;">
  <div class="headerless"></div>

  <div style="color: #0c304a; font-family: 'Roboto','Verdana',sans-serif; font-size: 2em; text-align: center;"><b>STAFF PENGAJAR JPTEI</b></div>
    <div style="float: left;">
      <div style="width: 300px; margin-top: 24px; margin-left: 38.5px; border: 1px solid lightgray; border-radius: 3px; color: #0c304a; border-bottom: 1px solid lightgray;">
        <div style="background-color: #004576; color: white; padding: 10px; border-bottom: 1px solid lightgray; border-top-left-radius: 3px; border-top-right-radius: 3px;"><b>KATEGORI</b></div>
        <form method="GET" action="/filter">
          <div style="padding: 10px;">
            <div style="padding-bottom: 5px; color: #004576;">
              <b>Jabatan</b><br>
            </div>

            <div style="padding-left: 5px; padding-bottom: 5px;"> 
              <input type="radio" name="jabatan" value="2"> Asisten Ahli<br>
              <input type="radio" name="jabatan" value="3"> Lektor<br>
            </div>
          </div>
          <div style="border-bottom: 1px solid lightgray;"></div>

          
          <div style="border-bottom: 1px solid lightgray;"></div>

          <div style="padding: 10px;">
            <div style="padding-bottom: 5px; color: #004576;">
              <b>Keahlian</b><br>
            </div>
                
            <div style="padding-left: 5px;">
              <input type="radio" name="keahlian" value="3"> Jaringan Komputer<br>
              <input type="radio" name="keahlian" value="4"> Elektronika<br>
              <input type="radio" name="keahlian" value="5"> Pendidikan Teknologi<br>
              <input type="radio" name="keahlian" value="6"> Komunikasi Data<br>
            </div>
          </div>
        
        <style>
          button.tombol123:hover {
            background-color: white;
            color: #006fdc;
          }
        </style>

        <div style="padding: 5px 10px 15px 10px;">
          <button type="submit" class="tombol123" style="padding: 5px 16px 5px 16px; color: white; border-radius: 3px; background-color: #004576; border: 1px solid #004576;">Filter</button>
        </div>
      </form>
        
      </div>
    
    </div>
    
    <table class="table" style="border-radius: 3px;">
      <% for(let d of dosen) { %>
        <tr>
          <th scope="col">
            <a href="/profile/<%= d.nip %>">
              <div style="border: 1px solid lightgray; border-radius: 3px; background-image: url('/<%= d.foto %>');background-size:cover;height:200.3px;width:180.3px;" class="center"></div>
            </a>
          </th>

          <th scope="row" style="color: #4e84c4;font-family: 'Open Sans','Verdana',sans-serif;font-size: 1.2em;line-height: 1.22222em;">
            <div style=" padding-bottom: 15px;">
              <a href="/profile/<%= d.nip %>" style="text-decoration: none;">
                <%= d.nama %>
              </a>
            </div>

            <div scope="row" style="color: #0c304a;font-family: 'Open Sans','Verdana',sans-serif;font-size: 14px; padding-bottom: 15px;">
              <%= d.nama_jabatan %>
            </div>

            <div scope="row" style="color: #0c304a;font-family: 'Open Sans','Verdana',sans-serif;font-size: 14px; padding-bottom: 15px;">
              <%= d.nip %>
            </div>
            
            <div scope="row" style="color: #0c304a;font-family: 'Open Sans','Verdana',sans-serif;font-size: 14px; padding-bottom: 15px;">
              <%= d.email %>
            </div>
          </th>
        </tr>
      <% } %>
    </table>
</div>

<% include ../includes/foot.ejs %>